<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RydoBikes" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBg</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Theme.RydoBikes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="textFillColor">@color/white</item>
    </style>

    <style name="Theme.RydoBikes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
